<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/textViewButtonName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:text="@string/textViewButtonName"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewButtonString"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonName"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:text="@string/textViewButtonString"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/buttonName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewButtonName"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:inputType="text"
            android:text="@string/defaultPort"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/buttonString"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewButtonString"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:inputType="text"
            android:text="@string/defaultIP"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="25sp" >

            <requestFocus />
        </EditText>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkBoxHexText"
            android:id="@+id/checkBoxHex"
            android:layout_below="@+id/buttonString"
            android:textColor="@color/white"
            android:checked="false"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/layoutHex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxHex"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textViewHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="@string/textViewHexText"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/editTextHex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_centerHorizontal="true"
                android:inputType="text"
                android:text="@string/editTextHex"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="25sp" />


            </LinearLayout>
    </RelativeLayout>

</RelativeLayout>